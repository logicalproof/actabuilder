<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="span3">
<% if current_user == @user %>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Re-enter Password" %><br />
    <%= f.text_field :password_confirmation %>
  </div>
<% end %>
  <% if current_user.role == "admin" %>
    <div class="field">
	  <%= f.label :role %><br />
	  <%= f.select :role, User::ROLES, prompt: "Select a role" %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>