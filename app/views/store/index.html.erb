<% if notice %>
  <p id="notice">
	<%= notice %>
  </p>
<% end %>

<h1>A Call To Arms: Starfleet</h1>
<h2>Fleet Builder Catalog</h2>

<% @ships.each do |ship| %>
  <div class="entry">
  	<%= image_tag(ship.empire_image) %><h3><%= ship.name %><span class="ship_pic"><%= image_tag(ship.image_url)%></span></h3>
  	
    <div class="cost_line">
      <span class="cost">Cost: <%= ship.cost %></span>
      <%= button_to 'Add to Fleet', assigned_ships_path(ship_id: ship)%>
    </div>
  </div>
<% end %>
