<h1>Listing ships</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Cost</th>
    <th>Image url</th>
    <th>Empire</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ships.each do |ship| %>
  <tr>
    <td><%= ship.name %></td>
    <td><%= ship.cost %></td>
    <td><%= ship.image_url %></td>
    <td><%= ship.empire %></td>
    <td><%= link_to 'Show', ship %></td>
    <td><%= link_to 'Edit', edit_ship_path(ship) %></td>
    <td><%= link_to 'Destroy', ship, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

