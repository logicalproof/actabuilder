<h1>Ship List</h1>

<table>
  <% @ships.each do |ship| %>
	<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td>
        <%= image_tag(ship.empire_image, class: 'list_image_empire') %>
      </td>  
      <td class="list_name">
    	<dl>
    		<dt><%= ship.name %></dt>
    		<dd>Cost: <b><%= ship.cost %></b></dd>
    	</dl>
      </td>
      <td>
      	<%= image_tag(ship.image_url, class: 'list_image_ship') %>
      </td>
      <td class="list_actions">
    	<%= link_to 'Show', ship %><br />
    	<%= link_to 'Edit', edit_ship_path(ship)%><br />
    	<%= link_to 'Destroy', ship, confirm: 'Are you sure?', method: :delete %>
      </td>
    </tr>
  <% end %>
</table>

<br />	

<%= link_to 'New Ship', new_ship_path %>
